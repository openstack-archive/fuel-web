#cloud-config
disable_ec2_metadata: true
disable_root: false

ssh_authorized_keys:
  - {{ cloud_config.ssh_auth_key }}

# set the locale to a given locale
# default: en_US.UTF-8
locale: en_US.UTF-8

#timezone: {{ timezone }}

hostname: {{ cloud_config.hostname }}
fqdn: {{ cloud_config.fqdn }}

resolv_conf:
  nameservers: [ {{ cloud_config.name_servers }} ]
  searchdomains:
   - {{ cloud_config.search_domain }}
#  domain: {{ domain }}
#  options:
#    rotate: true
#    timeout: 1


# add entries to rsyslog configuration
rsyslog:
  - filename: 10-log2master.conf
    content: |
      $template LogToMaster, "<%%PRI%>1 %$NOW%T%TIMESTAMP:8:$%Z %HOSTNAME% %APP-NAME% %PROCID% %MSGID% -%msg%\n"
      *.* @{{ cloud_config.master_ip }};LogToMaster


# that module's missing in 0.6.3, but existent for >= 0.7.3
write_files:
 -   content: |
        ---
        url: {{ cloud_config.nailgun_agent_url|default("FIXME:fake url") }}
     path: /etc/nailgun-agent/config.yaml 
 -   content: target
     path: /etc/nailgun_systemtype

mcollective:
  conf:
    main_collective: mcollective
    collectives: mcollective
    libdir: /usr/share/mcollective/plugins
    logfile: /var/log/mcollective.log
    loglevel: debug
    daemonize: 1
    direct_addressing: 0
    ttl: 4294957
    securityprovider: psk
    plugin.psk: {{ cloud_config.mco_pskey }}
    connector: {{ cloud_config.mco_connector }}
    plugin.rabbitmq.vhost: {{ cloud_config.mco_vhost }}
    plugin.rabbitmq.pool.size: 1
    plugin.rabbitmq.pool.1.host: {{ cloud_config.mco_host }}
    plugin.rabbitmq.pool.1.port: {{ cloud_config.mco_port|default(61613) }}
    plugin.rabbitmq.pool.1.user: {{ cloud_config.mco_user }}
    plugin.rabbitmq.pool.1.password: {{ cloud_config.mco_password }}
    plugin.rabbitmq.heartbeat_interval: 30
    factsource: yaml
    plugin.yaml: /etc/mcollective/facts.yaml


puppet:
  conf:
    main:
      logdir: /var/log/puppet
      rundir: /var/run/puppet
      ssldir: $vardir/ssl
      pluginsync: true
    agent:
      classfile: $vardir/classes.txt
      localconfig: $vardir/localconfig
      server: {{ cloud_config.puppet_master }}
      report: false
      configtimeout: 600


